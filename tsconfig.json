{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "typeRoots": ["node_modules/@types"],
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "listFiles": false
    },
    "exclude": [
        "node_modules"
    ]
}
